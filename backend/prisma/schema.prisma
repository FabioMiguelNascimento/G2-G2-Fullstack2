generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum ProductCondition {
  PREMIUM
  NEW
  REFURBISHED
  USED
  DAMAGED
}

enum WarrantyType {
  MANUFACTURER
  EXTENDED
  REFURBISHED
}

enum ShippingOption {
  FREE
  PAID
  EXPRESS
}

enum ReturnPolicy {
  DAYS_30
  DAYS_60
  NO_RETURN
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     UserRole @default(USER)

  order Order[]
  cart  Cart    @relation(fields: [cartId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cartId    String   @unique
}

model Order {
  id     String @id @default(uuid())
  name   String
  userId String
  user   User   @relation(fields: [userId], references: [id])

  product ProductInOrder[]
}

model Product {
  id          String @id @default(uuid())
  title       String
  description String
  price       Float

  withoutDiscount Float?
  discountPercentage Float?
  rating      Float?
  inStock     Boolean @default(true)
  isNew       Boolean @default(false)
  condition   ProductCondition @default(NEW)

  categorys   Json?
  specifications Json?
  mainFeatures Json?
  colors      Json?
  includes    Json?

  freeShipping ShippingOption @default(FREE)
  warranty    WarrantyType @default(MANUFACTURER)
  returnPolicy ReturnPolicy @default(DAYS_30)

  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order ProductInOrder[]
  cart  ProductInCart[]
}

model Cart {
  id         String @id @default(uuid())
  totalValue String @default("0")

  product ProductInCart[]
  user    User?
}

model ProductInCart {
  product   Product @relation(fields: [productId], references: [id])
  productId String

  cart   Cart   @relation(fields: [cartId], references: [id])
  cartId String

  assignedAt DateTime @default(now())
  assignedBy String

  @@id([productId, cartId])
}

model ProductInOrder {
  product   Product @relation(fields: [productId], references: [id])
  productId String

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  assignedAt DateTime @default(now())
  assignedBy String

  @@id([productId, orderId])
}
